@model IEnumerable<TicketBeasts.Models.Sport>

<div class="container">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div>
            <h1 class="h3 mb-1">Latest Sport Games</h1>
            <div class="text-muted">Newest to oldest</div>
        </div>
        <a asp-action="Create" class="btn btn-primary">Add a Sport Game</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Owner</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.EventDateTime.ToString("ddd, MMM d")</td>
                    <td>@item.EventDateTime.ToString("h:mm tt")</td>
                    <td>@item.Location</td>
                    <td>@item.Owner?.Name</td>
                    <td class="text-nowrap">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>