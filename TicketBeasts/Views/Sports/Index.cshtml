@model IEnumerable<TicketBeasts.Models.Sport>

<div class="container">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div>
            <h1 class="h3 mb-1">Latest Sport Games</h1>
            <div class="text-muted">Newest to oldest</div>
        </div>
        <a asp-action="Create" class="btn btn-primary">Add a Sport Game</a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Time</th>
                <th>Location</th>
                <th>Owner</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                var src = string.IsNullOrEmpty(s.ImagePath)
                ? Url.Content("~/img/soccer.png")
                : s.ImagePath;

                <tr>
                    <td>
                        <img src="@(string.IsNullOrWhiteSpace(s.ImagePath)
                                     ? Url.Content("~/img/placeholder.png")
                                     : s.ImagePath)"
                         alt="ticket image"
                         class="img-thumbnail"
                         style="width:160px;height:50px;object-fit:cover;" />
                </td>


                    <td>@s.Title</td>
                    <td>@s.Category?.Name</td>
                    <td>@s.EventDateTime.ToString("ddd, MMM d")</td>
                    <td>@s.EventDateTime.ToString("h:mm tt")</td>
                    <td>@s.Location</td>
                    <td>@s.Owner?.Name</td>
                    <td class="text-nowrap">
                        <a class="btn btn-outline-primary btn-sm" asp-controller="Sports" asp-action="Details" asp-route-id="@s.Id">Details</a>
                        <a class="btn btn-outline-secondary btn-sm" asp-controller="Sports" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                        <a class="btn btn-outline-danger btn-sm" asp-controller="Sports" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>